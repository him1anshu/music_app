<div class="container-fluid">

<h2>All Albums</h2>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td class="p-0 pt-1"><%= link_to 'Show', album, class: "btn btn-dark m-0" %></td>
        <td class="p-0 pt-1"><%= link_to 'Edit', edit_album_path(album), class: "btn btn-primary m-0" %></td>
        <td class="p-0 pt-1"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-0" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class: "btn btn-primary m-0" %>
<%= link_to "Home" , root_path, :class => "btn btn-dark my-4 ml-4"%>


</div>